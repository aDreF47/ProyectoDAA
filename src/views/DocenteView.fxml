<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DocenteController">
    <!-- Top Section -->
    <top>
        <HBox spacing="15.0" style="-fx-padding: 10; -fx-background-color: #0078D7;">
            <Text style="-fx-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="DOCENTE" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#DisponibilidadAction" style="-fx-background-color: #005A9E; -fx-text-fill: white;" text="Disponibilidad" />
            <Button onAction="#HorarioAction" style="-fx-background-color: #005A9E; -fx-text-fill: white;" text="Horario" />
            <Button onAction="#ReporteAction" style="-fx-background-color: #005A9E; -fx-text-fill: white;" text="Reporte" />
            <Button onAction="#SalirAction" style="-fx-background-color: #D9534F; -fx-text-fill: white;" text="Salir" />
        </HBox>
    </top>
    
    <!-- Left Section -->
    <left>
        <VBox prefWidth="250.0" spacing="10.0" style="-fx-padding: 10; -fx-background-color: #F4F4F4;">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Text style="-fx-font-size: 16px;" text="Nombre:" />
            <Text style="-fx-font-size: 16px;" text="Código:" />
            <Text style="-fx-font-size: 16px;" text="Correo:" />
        </VBox>
    </left>
    
    <!-- Center Section -->
    <center>
        <TabPane style="-fx-padding: 10;" tabClosingPolicy="UNAVAILABLE">
            <!-- Tab 1: Disponibilidad -->
            <Tab text="Disponibilidad">
                <VBox spacing="15.0" style="-fx-padding: 15;">
                    <HBox spacing="20.0">
                        <!-- Cursos Disponibles -->
                        <VBox spacing="10.0">
                            <Text style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Cursos disponibles" />
                            <TableView>
                                <columns>
                                    <TableColumn prefWidth="100.0" text="C1" />
                                    <TableColumn prefWidth="100.0" text="C2" />
                                </columns>
                            </TableView>
                            <Button onAction="#ElegirCursoAction" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Elegir" />
                        </VBox>
                        
                        <!-- Cursos Elegidos -->
                        <VBox spacing="10.0">
                            <Text style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Cursos elegidos" />
                            <TableView>
                                <columns>
                                    <TableColumn prefWidth="100.0" text="C1" />
                                </columns>
                            </TableView>
                            <HBox spacing="10.0">
                                <Button onAction="#EditarCursoAction" style="-fx-background-color: #FFC107; -fx-text-fill: white;" text="Editar" />
                                <Button onAction="#BorrarCursoAction" style="-fx-background-color: #D9534F; -fx-text-fill: white;" text="Borrar" />
                            </HBox>
                        </VBox>
                        
                        <!-- Días Disponibles -->
                        <VBox spacing="10.0">
                            <Text style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Días disponibles:" />
                            <TextField promptText="Día (e.g., Lunes)" />
                            <HBox spacing="5.0">
                                <Text text="De:" />
                                <TextField promptText="Hora inicio" />
                            </HBox>
                            <HBox spacing="5.0">
                                <Text text="Hasta:" />
                                <TextField promptText="Hora fin" />
                            </HBox>
                            <Button onAction="#AgregarDisponibilidadAction" style="-fx-background-color: #28A745; -fx-text-fill: white;" text="Agregar" />
                            <Button onAction="#GenerarHorarioAction" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Generar Horario" />
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Tab 2: Horario Generado -->
            <Tab text="Horario Generado">
                <VBox spacing="10.0" style="-fx-padding: 15;">

                    <!-- Contenedor para mostrar el horario generado -->
                    <VBox fx:id="horarioGeneradoContainer" spacing="10.0">
                        <!-- El horario generado se mostrará aquí -->
                    </VBox>

                    <!-- Botones para generar nuevos horarios -->
                    <HBox spacing="15.0" alignment="CENTER">
                        <Button onAction="#GenerarNuevoHorarioAction" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Generar nuevo horario" />
                        <Button onAction="#SeleccionarHorarioAction" style="-fx-background-color: #28A745; -fx-text-fill: white;" text="Seleccionar este horario" />
                    </HBox>

                    <!-- Mensaje si no hay más propuestas -->
                    <Text fx:id="mensajeNoMasPropuestas" style="-fx-font-size: 14px; -fx-fill: red;" visible="false" text="No hay más propuestas disponibles." />
                </VBox>
            </Tab>
            
            <!-- Tab 3: Reporte -->
            <Tab text="Reporte">
                <VBox spacing="10.0" style="-fx-padding: 15;">
                    <Text style="-fx-font-size: 14px;" text="Aquí se generarán y visualizarán los reportes." />
                </VBox>
            </Tab>
        </TabPane>
    </center>
    
    <!-- Bottom Section -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #F4F4F4;">
            <Text style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Sistema de Gestión de Horarios - Facultad de Ingeniería" />
        </HBox>
    </bottom>
</BorderPane>
